<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="0dp"
        android:layout_margin="0dp"
        app:cardElevation="4dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                app:layout_constraintDimensionRatio="1:1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/ripple_back"
                android:id="@+id/speech_btn"
                app:iconTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/speech_btn_image"
                    style="@style/image_view"
                    app:srcCompat="@drawable/speech_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <com.cielyang.android.clearableedittext.ClearableEditText
                android:imeOptions="actionSearch"
                android:inputType="text"
                app:clearIconDrawable="@drawable/clear_ic"
                android:background="@android:color/transparent"
                android:layoutDirection="inherit"
                android:hint="سرچ در آراپ"
                app:backgroundTint="@color/black"
                app:layout_constraintStart_toEndOf="@id/speech_btn"
                android:lines="1"
                android:id="@+id/search_edit_text"
                android:textColor="#3C3C3C"
                app:layout_constraintEnd_toStartOf="@id/search_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/ripple_back"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:id="@+id/search_btn"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/search_btn_image"
                    style="@style/image_view"
                    app:srcCompat="@drawable/arrow_forward"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/history_card"
        android:visibility="gone"
        app:cardElevation="2dp"
        android:layout_width="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_title_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="8dp"
                android:id="@+id/history_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text=" تاریخچه جستسجوی شما"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@id/history_title"
                android:id="@+id/history_recycler_view"
                android:layout_width="match_parent"
                tools:itemCount="2"
                tools:listitem="@layout/history_item_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/suggestion_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history_card">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="8dp"
                android:id="@+id/suggestion_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="پیشنهاد"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggestion_recycler_view"
                android:layout_width="match_parent"
                tools:itemCount="8"
                app:layout_constraintTop_toBottomOf="@id/suggestion_text"
                tools:listitem="@layout/suggestion_item_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>